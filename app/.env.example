# ==============================================================================
# Application Settings
# ==============================================================================
APP_NAME="FastAPI Fullstack Boilerplate"
ENVIRONMENT="local" # local, staging, production

# ==============================================================================
# Security
# ==============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY="your-secret-key-here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================================================
# Database (PostgreSQL)
# ==============================================================================
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_SERVER="localhost" # Use "db" for Docker
POSTGRES_PORT=5432
POSTGRES_DB="fastapi"

# ==============================================================================
# Redis
# ==============================================================================
REDIS_HOST="localhost" # Use "redis" for Docker
REDIS_PORT=6379
ENABLE_REDIS_CACHE=True
ENABLE_REDIS_QUEUE=True
ENABLE_REDIS_RATE_LIMIT=True

# ==============================================================================
# First Admin User (created via 'make superuser')
# ==============================================================================
ADMIN_FIRST_NAME="Admin"
ADMIN_LAST_NAME="User"
ADMIN_MIDDLE_NAME=""
ADMIN_USERNAME="admin"
ADMIN_PHONE="+998901234567"
ADMIN_PASSWORD="Change-me"

# ==============================================================================
# CORS Settings (JSON format)
# ==============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

